/*挂号选择时间*/
.time{
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 36rpx;
 }
 .time .listItem{
  width: 25%;
  height: 135rpx;
  text-align: center;
  box-sizing: border-box;
  background-color: lightblue;
  padding-top: 35rpx;
  border: 1px solid white;
 }
 .time .listItem text{
  display: block;
  font-size: 30rpx;
 }
 .time .current text{
  color: whitesmoke;
 }
 .time .black {
   background-color: rgb(136, 129, 129);
 }
