/*class='operate'*/
.operate{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  width: 100%;
  padding: 30rpx 0;
  background-color: transparent;
  bottom: 0;
}
.operate button{
  width:300rpx;
  height: 88rpx;
  background-color: transparent;
 }
 .operate button::after{
  border: 2px solid #e54449;
 }

 .operate button:nth-child(2):after{
  border: 2px solid #e54449;
 }
 .operate .save{
  color: white;
  background-color: green; 
  bottom: 0;
  text-align: center;
 }
